!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %title Food Bank
    = render 'layouts/shared/meta'
    = stylesheet_link_tag 'admin', media: 'all', 'data-turbolinks-track' => true
    / HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries
    /[if lte IE 8]
      <script src="/assets/html5shiv/html5shiv.js"></script>
      <script src="/assets/plugins/respond/respond.min.js"></script>
      <script src="/assets/plugins/flot/excanvas.min.js"></script>
  %body
    = params
    .wrapper
      %aside.social-sidebar
        .social-sidebar-content
          .user
            = image_tag 'avatars/avatar-30.png', alt: 'Julio Marquez', height: '25', width: '25', class: 'avatar'
            %span= current_provider.email
            %i.trigger-user-settings.fa.fa-user{"data-toggle" => "dropdown"}
          .search-sidebar
            %form.search-sidebar-form.has-icon
              %label.fa.fa-search{:for => "sidebar-query"}
              %input#sidebar-query.search-query{:placeholder => "Search", :type => "text"}
          .clearfix
          .menu
            .menu-content
              %ul#social-sidebar-menu
                %li{class: "#{'active' if params[:controller] == 'providers/dashboards'}"}
                  = link_to providers_root_path do
                    %i.fa.fa-home
                    %span Dashboard
                %li{class: "#{'active' if params[:controller] == 'providers/organization'}"}
                  = link_to edit_providers_organization_path(current_account) do
                    %i.fa.fa-building-o
                    %span Organization
                %li{class: "#{'active' if params[:controller] == 'providers/providers'}"}
                  = link_to providers_providers_path do
                    %i.fa.fa-users
                    %span Staff
                %li{class: "#{'active' if params[:controller] == 'providers/pickup_schedules'}"}
                  = link_to providers_schedules_path do
                    %i.fa.fa-star
                    %span Pickup Schedules
                %li{class: "#{'active' if params[:controller] == 'providers/notify_receivers'}"}
                  = link_to providers_notify_receivers_path do
                    %i.fa.fa-bell-o
                    %span Notify Receivers
                %li{class: "#{'active' if params[:controller] == 'providers/receipts'}"}
                  = link_to providers_receipts_path do
                    %i.fa.fa-money
                    %span Our Receipts
      %header
        %nav.navbar.navbar-fixed-top.navbar-super.social-navbar{:role => "navigation"}
          .navbar-header
            = link_to providers_root_path, title: 'Provider', class: 'navbar-brand' do
              = image_tag 'logo-white-181.png', alt: 'Provider', height: '25', width: '25', class: 'light'
              = image_tag 'logo-gray-181.png', alt: 'Provider', height: '25', width: '25', class: 'dark'
              %span  Provider
          .navbar-toggle
            %i.fa.fa-align-justify
          %div
            %ul.nav.navbar-nav.navbar-right
              %li.divider-vertical
              %li.dropdown
                %a.dropdown-toggle{"data-delay" => "0", "data-hover" => "dropdown", "data-toggle" => "dropdown", :href => "#"}
                  %i.fa.fa-caret-down.fa-lg
                %ul.dropdown-menu
                  %li
                    %a{:href => "#"}
                      %i.fa.fa-user>
                      My Profile
                  %li
                    = link_to destroy_provider_session_path do
                      %i.fa.fa-sign-out>
                      Log Out
                  %li.divider
                  %li
                    = link_to destroy_provider_session_path do
                      %i.fa.fa-info>
                      Help
      .main
        = yield
      %footer 2015 Â© FoodBanker
    = render 'layouts/shared/footer'
