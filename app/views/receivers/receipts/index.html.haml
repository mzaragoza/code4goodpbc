.container
  .row
    .col-md-12
      %h3.page-title &nbsp;
.container
  .row
    .col-md-12
      .panel.panel-primary
        .panel-heading
          %h3.page-title Receipts Given
        .panel-body
          %table#datatable1.table.table-striped.table-bordered.table-hover.table-responsive
            %thead
              %tr
                %th{:style => "width='36%'"} Provider
                %th{:style => "width='20%'"} Cash Calue
                %th{:style => "width='20%'"} Pounds Donated
                %th{:style => "width='20%'"} Notes
                %th{:style => "width='20%'"}= link_to t(:add), new_receivers_receipt_path(), class: 'btn btn-primary'
            %tfoot
              %tr
                %th Provider
                %th Cash Calue
                %th Pounds Donated
                %th Notes
                %th= link_to t(:add), new_receivers_receipt_path(), class: 'btn btn-primary'
            %tbody
              - 20.times do |p|
                %tr
                  %td= ['Banner Lake Cafe', 'Rhythm Cafe', 'The Chickpea', 'Table 26'].sample
                  %td= number_to_currency(rand(1000)) 
                  %td= (rand(1000) + 20 ).to_s + ' LBS'
                  %td= FFaker::Lorem.paragraph
                  %td= link_to t(:add), new_receivers_receipt_path(), class: 'btn btn-primary'
